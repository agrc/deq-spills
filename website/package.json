{
  "name": "@ugrc/deq-spills",
  "version": "3.0.3-rc.1",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -b && vite build",
    "check": "tsc -b",
    "copy:arcgis": "cpy \"./node_modules/@arcgis/core/assets/**\" ./public/assets",
    "dev": "concurrently 'cd functions && pnpm run build:watch' 'wait-on ./functions/lib/src/index.js && pnpm dev:firebase' 'wait-on http://127.0.0.1:4000 && pnpm dev:vite'",
    "dev:firebase": "./scripts/start-emulators.sh",
    "dev:vite": "vite",
    "format": "prettier . --write",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "pnpm run dev",
    "test": "vitest"
  },
  "browserslist": {
    "production": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@arcgis/core": "^4.33.14",
    "@tanstack/react-query": "^5.85.5",
    "@ugrc/eslint-config": "^1.2.3",
    "@ugrc/esri-theme-toggle": "^1.1.2",
    "@ugrc/layer-selector": "^6.4.0",
    "@ugrc/utah-design-system": "^1.30.2",
    "@ugrc/utilities": "^3.1.1",
    "firebase": "^12.2.1",
    "ky": "^1.11.0",
    "lodash.startcase": "^4.4.0",
    "react": "^19.2.0",
    "react-aria-components": "^1.13.0",
    "react-dom": "^19.2.0",
    "react-error-boundary": "^6.0.0",
    "react-fast-compare": "^3.2.2",
    "react-stately": "^3.42.0",
    "usehooks-ts": "^3.1.1"
  },
  "devDependencies": {
    "@types/lodash.startcase": "^4.4.9",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@ugrc/tailwind-preset": "^1.2.0",
    "@ugrc/tsconfigs": "^1.0.3",
    "@vitejs/plugin-react": "^5.0.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cpy-cli": "^6.0.0",
    "eslint": "^9.37.0",
    "firebase-tools": "^14.14.0",
    "happy-dom": "^18.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-packagejson": "^2.5.19",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^3.4.18",
    "tailwindcss-react-aria-components": "^1.2.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.11",
    "vite-plugin-package-version": "^1.1.0",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@firebase/util",
      "@vaadin/vaadin-usage-statistics",
      "esbuild",
      "protobufjs",
      "re2"
    ],
    "ignoredBuiltDependencies": [
      "unrs-resolver"
    ]
  }
}
